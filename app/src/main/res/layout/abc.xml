<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Ürün Görseli -->
    <ImageView
        android:id="@+id/imageViewProduct"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_product"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Favori Butonu -->
    <ImageButton
        android:id="@+id/buttonFavorite"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@android:color/transparent"
        android:src="@drawable/favorite"
        android:contentDescription="Favorilere ekle"
        app:layout_constraintTop_toTopOf="@id/imageViewProduct"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ürün Adı -->
    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ürün Adı"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/imageViewProduct"
        app:layout_constraintStart_toEndOf="@id/imageViewProduct"
        app:layout_constraintEnd_toStartOf="@id/buttonFavorite"
        android:layout_marginStart="8dp" />

    <!-- Marka -->
    <TextView
        android:id="@+id/textViewBrand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Marka: XYZ"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textViewProductName"
        app:layout_constraintStart_toStartOf="@id/textViewProductName"
        app:layout_constraintEnd_toEndOf="@id/textViewProductName" />

    <!-- Kategori -->
    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kategori: Elektronik"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textViewBrand"
        app:layout_constraintStart_toStartOf="@id/textViewBrand"
        app:layout_constraintEnd_toEndOf="@id/textViewBrand" />

    <!-- Fiyat -->
    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="₺195.00"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@id/textViewCategory"
        app:layout_constraintStart_toStartOf="@id/textViewCategory"
        app:layout_constraintEnd_toEndOf="@id/textViewCategory" />

    <!-- Adet Ayarlama -->
    <LinearLayout
        android:id="@+id/quantityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewProduct"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonDecrease"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-" />

        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="1"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonIncrease"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+" />
    </LinearLayout>

    <!-- Toplam Fiyat -->
    <TextView
        android:id="@+id/textViewTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toplam: ₺195.00"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/quantityLayout"
        app:layout_constraintStart_toEndOf="@id/quantityLayout" />

    <!-- Sepete Ekle Butonu -->
    <Button
        android:id="@+id/buttonAddToCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sepete Ekle"
        android:backgroundTint="@color/material_dynamic_neutral_variant30"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/quantityLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
